            size_hint: (0.25, 0.04)
            pos_hint: {"right":0.65,"y": 0.10}

        Button:
            text: 'Go back'
            on_release:root.go_back()
            size_hint: (0.08, 0.04)
            pos_hint: {"right":0.17,"center_y": 0.85}

<ModelParamPopUp@Popup>
    title:""
    auto_dismiss: False # If true when clicking outside box the box closes
    size_hint: (0.3, 0.65)
